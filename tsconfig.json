{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": false,
    "outDir": "./lib",
    "declaration": true,
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"],
  "lib": ["es2015"]
}
