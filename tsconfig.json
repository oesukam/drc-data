{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": false,
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"],
  "lib": ["es2015"],
}
